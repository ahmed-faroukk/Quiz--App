<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ui.fragments.bookFragment">


        <!-- Question text -->
        <TextView
            android:id="@+id/question_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="25dp"
            android:textSize="23dp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:textColor="#28B8F4"
            android:text="how many planets in the universe?" />

    <!-- Question text -->
    <TextView
        android:id="@+id/currentQuesCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_gravity="right"
        android:layout_margin="10dp"
        android:textColor="#28B8F4"
        android:text="1/10" />

        <!-- RadioGroup to hold the radio buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            />
            <!-- Radio button for choice 1 -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/choice1"
                android:background="@drawable/home_bg"
                android:layout_width="match_parent"
                android:layout_margin="15dp"
                android:layout_height="wrap_content"
                android:text="Three planets"
                android:textColor="#28B8F4"
                android:gravity="fill"
                android:padding="10dp"

                />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="B"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            />
            <!-- Radio button for choice 2 -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/choice2"
                android:layout_width="match_parent"
                android:background="@drawable/home_bg"
                android:layout_margin="15dp"
                android:layout_height="wrap_content"
                android:text="Seven planets"
                android:textStyle=""
                android:textColor="#28B8F4"
                android:gravity="fill"
                android:padding="10dp"

                />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            />
            <!-- Radio button for choice 3 -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/choice3"
                android:background="@drawable/home_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="Eight planets"
                android:textColor="#28B8F4"
                android:gravity="fill"
                android:padding="10dp"

                />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/D"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="D"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            />
    <!-- Radio button for choice 4 -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/choice4"
        android:background="@drawable/home_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="Four planets"
        android:textColor="#28B8F4"
        android:gravity="fill"
        android:padding="10dp"

        />
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/NextBtn"
        android:background="@drawable/ic_buttom_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="25dp"
        android:text="Next" />



</LinearLayout>
